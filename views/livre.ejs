<body>
    <div class="central">
        <% include ./partials/header %>

            <h1 class="title-livre">
                <%= title %>
            </h1>
            <div class="french-livres">
                <% for(livres of livres) {%>
                    <div class="french-livres__container">
                        <h3 class="french-livres__container__p">
                            <%= livres.livretitle %>
                        </h3>

                        <img class="french-livres__container__img"src="https://www.monbestseller.com/sites/default/files/conseil/couverture_livre_-_monbestseller.png" alt="">

                        <h4 class="french-livres__container__p">
                            <%= livres.livreauteur %>
                        </p>

                        <h4 class="french-livres__container__p">
                            <%= livres.livreyear %>
                        </p>

                        <p class="french-livres__container__p">
                            <%= livres.livredescription %>
                        </p>
                    </div>
                    <% } %>
            </div>
